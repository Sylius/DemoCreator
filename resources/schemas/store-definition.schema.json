{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "storePresetName": {
            "type": "string"
        },
        "locales": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "currencies": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "countries": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "menuTaxon": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "translations": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "code",
                "name",
                "translations"
            ],
            "additionalProperties": false
        },
        "channel": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "locales": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "currencies": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "hostname": {
                    "type": "string"
                },
                "theme_name": {
                    "type": "string"
                }
            },
            "required": [
                "code",
                "name",
                "locales",
                "currencies",
                "hostname",
                "theme_name"
            ],
            "additionalProperties": false
        },
        "categories": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "code": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "slug": {
                        "type": "string"
                    },
                    "translations": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "required": [
                    "code",
                    "name",
                    "slug",
                    "translations"
                ],
                "additionalProperties": false
            }
        },
        "paymentMethods": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "code": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    }
                },
                "required": [
                    "code",
                    "name"
                ],
                "additionalProperties": false
            }
        },
        "shippingMethods": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "code": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    }
                },
                "required": [
                    "code",
                    "name"
                ],
                "additionalProperties": false
            }
        },
        "taxCategories": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "code": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    }
                },
                "required": [
                    "code",
                    "name"
                ],
                "additionalProperties": false
            }
        },
        "taxons": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "code": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "translations": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "required": [
                    "code",
                    "name",
                    "translations"
                ],
                "additionalProperties": false
            }
        },
        "taxRates": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "code": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "zone": {
                        "type": "string"
                    },
                    "category": {
                        "type": "string"
                    },
                    "amount": {
                        "type": "number"
                    }
                },
                "required": [
                    "code",
                    "name",
                    "zone",
                    "category",
                    "amount"
                ],
                "additionalProperties": false
            }
        },
        "products": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "short_description": {
                        "type": "string"
                    },
                    "img_prompt": {
                        "type": "string"
                    },
                    "tax_category": {
                        "type": "string"
                    },
                    "main_taxon": {
                        "type": "string"
                    },
                    "taxons": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "product_attributes": {
                        "type": "object",
                        "additionalProperties": {
                            "type": "string"
                        }
                    },
                    "product_options": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "images": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "required": [
                    "name",
                    "description",
                    "short_description",
                    "img_prompt",
                    "tax_category",
                    "main_taxon",
                    "taxons",
                    "product_attributes",
                    "images"
                ],
                "additionalProperties": false
            }
        },
        "theme": {
            "type": "object",
            "description": "Wygenerowany theme sklepu (cssVariables, assets)",
            "properties": {
                "cssVariables": {
                    "type": "object",
                    "description": "Obiekt z wymaganymi zmiennymi CSS do custom-theme.scss. Wszystkie muszą być obecne.",
                    "properties": {
                        "--bs-btn-bg": {
                            "type": "string"
                        },
                        "--bs-btn-hover-bg": {
                            "type": "string"
                        },
                        "--bs-body-bg": {
                            "type": "string"
                        },
                        "--bs-text-color": {
                            "type": "string"
                        },
                        "--bs-link-color": {
                            "type": "string"
                        },
                        "--bs-link-hover-color": {
                            "type": "string"
                        },
                        "--bs-link-color-rgb": {
                            "type": "string"
                        },
                        "--bs-link-hover-color-rgb": {
                            "type": "string"
                        },
                        "--bs-primary": {
                            "type": "string"
                        },
                        "--bs-primary-rgb": {
                            "type": "string"
                        },
                        "--bs-bg-opacity": {
                            "type": "string"
                        },
                        "--bs-btn-color": {
                            "type": "string"
                        },
                        "--bs-btn-border-color": {
                            "type": "string"
                        },
                        "--bs-btn-hover-border-color": {
                            "type": "string"
                        },
                        "--bs-btn-focus-shadow-rgb": {
                            "type": "string"
                        },
                        "--bs-btn-active-color": {
                            "type": "string"
                        },
                        "--bs-btn-active-bg": {
                            "type": "string"
                        },
                        "--bs-btn-active-border-color": {
                            "type": "string"
                        },
                        "--bs-btn-active-shadow": {
                            "type": "string"
                        },
                        "--bs-btn-disabled-color": {
                            "type": "string"
                        },
                        "--bs-btn-disabled-bg": {
                            "type": "string"
                        },
                        "--bs-btn-disabled-border-color": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "--bs-btn-bg",
                        "--bs-btn-hover-bg",
                        "--bs-body-bg",
                        "--bs-text-color",
                        "--bs-link-color",
                        "--bs-link-hover-color",
                        "--bs-link-color-rgb",
                        "--bs-link-hover-color-rgb",
                        "--bs-primary",
                        "--bs-primary-rgb",
                        "--bs-bg-opacity",
                        "--bs-btn-color",
                        "--bs-btn-border-color",
                        "--bs-btn-hover-border-color",
                        "--bs-btn-focus-shadow-rgb",
                        "--bs-btn-active-color",
                        "--bs-btn-active-bg",
                        "--bs-btn-active-border-color",
                        "--bs-btn-active-shadow",
                        "--bs-btn-disabled-color",
                        "--bs-btn-disabled-bg",
                        "--bs-btn-disabled-border-color"
                    ],
                    "additionalProperties": false
                },
                "assets": {
                    "type": "array",
                    "description": "Lista par klucz-wartość dla assetów (np. logo, banner)",
                    "items": {
                        "type": "object",
                        "properties": {
                            "key": {
                                "type": "string",
                                "description": "Nazwa assetu, np. logo, banner"
                            },
                            "value": {
                                "type": "string",
                                "description": "Ścieżka lub URL do assetu"
                            }
                        },
                        "required": [
                            "key",
                            "value"
                        ],
                        "additionalProperties": false
                    }
                }
            },
            "required": [
                "cssVariables",
                "assets"
            ]
        }
    },
    "required": [
        "storePresetName",
        "locales",
        "currencies",
        "countries",
        "menuTaxon",
        "channel",
        "categories",
        "paymentMethods",
        "shippingMethods",
        "taxCategories",
        "taxons",
        "taxRates",
        "products",
        "theme"
    ],
    "additionalProperties": false
}
