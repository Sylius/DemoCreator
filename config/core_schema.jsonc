/*
  JSON Schema for Sylius fixtures generation
  - Comments describe each field's purpose and requirements
  - No placeholders; all values must be concrete when generating fixtures
*/
{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "suiteName": {
            "type": "string"
            // unique name for the fixture suite, snake_case, e.g. "moj_sklep"
        },
        "locales": {
            "type": "array",
            // store languages as locale codes
            "items": {
                "type": "string"
            }
            // e.g. "pl_PL", "en_US"
        },
        "currencies": {
            "type": "array",
            // currencies matching locales
            "items": {
                "type": "string"
            }
            // ISO 4217 codes, e.g. "PLN"
        },
        "countries": {
            "type": "array",
            // countries of sale/shipment
            "items": {
                "type": "string"
            }
            // ISO 3166-1 alpha-2, e.g. "PL"
        },
        "zones": {
            "type": "object",
            // shipping zones map
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    // zone label, e.g. "Global"
                    "countries": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                        // list of country codes
                    }
                },
                "required": [
                    "name",
                    "countries"
                ],
                "additionalProperties": false
            }
        },
        "menuTaxon": {
            "type": "object",
            // main menu category
            "properties": {
                "code": {
                    "type": "string"
                },
                // UPPER_SNAKE_CASE
                "name": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                    // locale->name map
                }
            },
            "required": [
                "code",
                "name"
            ],
            "additionalProperties": false
        },
        "channel": {
            "type": "object",
            // sales channel config
            "properties": {
                "code": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "locales": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "currencies": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "hostname": {
                    "type": "string"
                },
                // e.g. "example.com"
                "theme_name": {
                    "type": "string"
                }
                // fallback "default"
            },
            "required": [
                "code",
                "name",
                "locales",
                "currencies",
                "hostname",
                "theme_name"
            ],
            "additionalProperties": false
        },
        "categories": {
            "type": "array",
            // product categories taxonomy
            "items": {
                "type": "object",
                "properties": {
                    "code": {
                        "type": "string"
                    },
                    // lower_snake_case
                    "name": {
                        "type": "string"
                    },
                    // default-locale name
                    "slug": {
                        "type": "string"
                    },
                    // kebab-case slug
                    "translations": {
                        "type": "object",
                        // locale -> {name,slug}
                        "additionalProperties": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "slug": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "name",
                                "slug"
                            ],
                            "additionalProperties": false
                        }
                    },
                    "children": {
                        "type": "array",
                        // nested subcategories
                        "items": {
                            "$ref": "#/properties/categories/items"
                        }
                    }
                },
                "required": [
                    "code",
                    "name",
                    "slug",
                    "translations"
                ],
                "additionalProperties": false
            }
        },
        "paymentMethods": {
            "type": "array",
            // supported payment options
            "items": {
                "type": "object",
                "properties": {
                    "code": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    }
                },
                "required": [
                    "code",
                    "name"
                ],
                "additionalProperties": false
            }
        },
        "shippingMethods": {
            "type": "array",
            // shipping options
            "items": {
                "type": "object",
                "properties": {
                    "code": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    }
                },
                "required": [
                    "code",
                    "name"
                ],
                "additionalProperties": false
            }
        },
        "taxCategories": {
            "type": "array",
            // product tax categories
            "items": {
                "type": "object",
                "properties": {
                    "code": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    }
                },
                "required": [
                    "code",
                    "name"
                ],
                "additionalProperties": false
            }
        },
        "taxons": {
            "type": "array",
            // additional taxons for filtering
            "items": {
                "type": "object",
                "properties": {
                    "code": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "translations": {
                        "type": "object",
                        "additionalProperties": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "slug": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "name",
                                "slug"
                            ],
                            "additionalProperties": false
                        }
                    },
                    "required": [
                        "code",
                        "name",
                        "translations"
                    ],
                    "additionalProperties": false
                }
            },
            "taxRates": {
                "type": "array",
                // tax rate entries
                "items": {
                    "type": "object",
                    "properties": {
                        "code": {
                            "type": "string"
                        },
                        "name": {
                            "type": "string"
                        },
                        "zone": {
                            "type": "string"
                        },
                        "category": {
                            "type": "string"
                        },
                        "amount": {
                            "type": "number"
                        }
                        // format 0.2 = 20%
                    },
                    "required": [
                        "code",
                        "name",
                        "zone",
                        "category",
                        "amount"
                    ],
                    "additionalProperties": false
                }
            },
            "products": {
                "type": "array",
                // product fixtures
                "items": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "description": {
                            "type": "string"
                        },
                        // ~6 sentences
                        "short_description": {
                            "type": "string"
                        },
                        // ~2 sentences
                        "img_prompt": {
                            "type": "string"
                        },
                        // DALLÂ·E prompt for images
                        "tax_category": {
                            "type": "string"
                        },
                        "main_taxon": {
                            "type": "string"
                        },
                        "taxons": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "product_attributes": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        },
                        "product_options": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "images": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "path": {
                                        "type": "string"
                                    },
                                    "type": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "path"
                                ],
                                "additionalProperties": false
                            }
                        }
                    },
                    "required": [
                        "name",
                        "description",
                        "short_description",
                        "img_prompt",
                        "tax_category",
                        "main_taxon",
                        "taxons",
                        "product_attributes",
                        "images"
                    ],
                    "additionalProperties": false
                }
            }
        },
        "required": [
            "suiteName",
            "locales",
            "currencies",
            "countries",
            "zones",
            "menuTaxon",
            "channel",
            "categories",
            "paymentMethods",
            "shippingMethods",
            "taxCategories",
            "taxons",
            "taxRates",
            "products"
        ],
        "additionalProperties": false
    }
}
